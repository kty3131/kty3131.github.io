<script type="text/javascript">
var targetElement = document.getElementsByID( "figcap1" ) ;

setInterval( function() {
  var clientRect = targetElement.getBoundingClientRect() ;//位置情報取得
  var y = clientRect.top ;// 画面内の位置（画面トップから）

  if(y==(screen.availHeight/2)){
    //要素に設定されているclassの一覧を取得する
    var list = obj.classList;
    console.log(list);
    obj.classList.remove("sticky-fg2");
    console.log(obj.classList);
  }else {
    var list = obj.classList;
    console.log(list);
    var result = obj.classList.contains("sticky-fg2")
    if(result){}
    else {
      obj.classList.add("sticky-fg2");
      console.log(obj.classList);
    }
  }
}, 100 ) ;

</script>
